{% block form_row %}
{% spaceless %}
	<div>
		{{ form_label(form) }}
		{{ form_widget(form) }}
	</div>
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
   {% spaceless %}
        {% set formErrors = [] %}
        {% for child in form.children  %}
        	{% if child.vars.errors is defined %}
	        	{% for error in child.vars.errors %}
	        		{% set formErrors = formErrors|merge(
	        			[child.vars.label|trans ~ ' : ' ~ error.message]) %}
	        	{% endfor %}
        	{% endif %}
        {% endfor %}
		{% if formErrors %}
            <div class="error">
            	<ul>
                {% for error in formErrors %}
                    <li>{{ error }}</li>
                {% endfor %}
                </ul>
            </div>
	    {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
